# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=nestjs_auth_db
DB_EXTERNAL_PORT=5432

# JWT
JWT_SECRET=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_DAYS=7

# CORS
CORS_ORIGIN=*

# AWS (for deployment)
AWS_REGION=eu-west-1
AWS_ACCOUNT_ID=your-aws-account-id
ECR_REPOSITORY=nestjs-auth-api
ECS_CLUSTER=your-ecs-cluster
ECS_SERVICE=nestjs-auth-service


# Elasticsearch & Kibana
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=nestjs-logs
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTIC_PASSWORD=changeme
KIBANA_PASSWORD=changeme